<div class="container">

    <h1>Guestbook#input</h1>
    <p>Find me in app/views/guestbook/input.html.erb</p>

    <form action="/guestbook/output" method="post">
        <label>이름</label>
        <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="이름을 입력해주세요.">
        </div>
        
        <label>내용</label>
        <div class="form-group">
            <textarea class="form-control" rows="4" name="contents" placeholder="방명록의 내용을 입력해주세요."></textarea>
        </div>
        
        <div class="form-group">
            <input type="submit" class="form-control btn btn-primary" value="확인!">
        </div>
    </form>

</div>